<% if @doctor == current_doctor %>
  <h1>Your Details</h1>
<% else %>
  <h1>Doctor View</h1>
<% end %>
<table>
  <tr>
    <th>Name</th>
    <td><%= @doctor.name %> </td>
  </tr>
  <tr>
    <th>Gender</th>
    <td><%= @doctor.gender %></td>
  </tr>
  <tr>
    <th>Specialty</th>
    <td><%= @doctor.specialty %></td>
  </tr>
  <tr>
    <th>Practice Name</th>
    <td><%= @doctor.practice_name %></td>
  </tr>
  <tr>
    <th>Practice Location</th>
    <td><%= @doctor.practice_location %></td>
  </tr>
  <tr>
    <th>Phone Number</th>
    <td><%= @doctor.phone %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td> <%= @doctor.email %></td>
  </tr>
</table>

<div class="margin-top-div">
<% if @doctor == current_doctor %>
  <%= link_to "View Appointments", appointments_path, :class => "show-page-button" %>
<% end %>
</div>
<div class="margin-top-div">
<%= link_to "View All Doctors", doctors_path, :class => "show-page-button"%>
</div>
<% if @doctor == current_doctor %>
<div class="margin-top-div">
<%= link_to "Edit Doctor", edit_doctor_path, :class => "show-page-button" %>
</div>
<div class="margin-top-div">
<%= button_to "Delete Your Account", doctor_path(@doctor), method: :delete, data: { confirm: 'Are your sure you want to delete your account?'}, :class => "show-page-button" %>
</div>
<% end %>
